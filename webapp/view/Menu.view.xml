<mvc:View controllerName="esj.menu.controller.Menu"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    
    <Page id="page" title="{i18n>menuPrincipal}">
        <content>
            <Panel headerText="{i18n>employees}" expandable="true" expanded="true">
                <GenericTile headerImage="sap-icon://add-employee" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="navToCreateEmployee">
                    <TileContent footer="{i18n>createEmployee}" />
                </GenericTile>

                <GenericTile headerImage="sap-icon://employee-lookup" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="navToShowEmployee">
                    <TileContent footer="{i18n>ShowEmployee}" />
                </GenericTile>
            </Panel>

            <Panel headerText="{i18n>orders}" expandable="true" expanded="true">
                <GenericTile id="linkFirmarPedidos" headerImage="sap-icon://signature" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="openOrders">
                    <TileContent footer="{i18n>signatureOrder}" />
                </GenericTile>
            </Panel>
        </content>
    </Page>
    
</mvc:View>
